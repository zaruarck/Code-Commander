<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8B385"
    tools:context=".rockPaperScissors">

    <Button
        android:id="@+id/btn_paper"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="258dp"
        android:layout_marginBottom="8dp"
        android:background="#5B3F38"
        android:text="Paper"
        android:textColor="#F39A07"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_rock2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="#5B3F38"
        android:text="Rock"
        android:textColor="#F39A07"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_scissors"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="490dp"
        android:layout_marginBottom="8dp"
        android:background="#5B3F38"
        android:text="Scissors"
        android:textColor="#F39A07"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_playerscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="516dp"
        android:layout_marginTop="16dp"
        android:text="AI Score"
        android:textColor="#E05502"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_playerscore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Player Score"
        android:textColor="#E05502"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_computerImage"
        android:layout_width="191dp"
        android:layout_height="183dp"
        android:layout_marginStart="472dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paper" />

    <ImageView
        android:id="@+id/img_userImage2"
        android:layout_width="191dp"
        android:layout_height="183dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rock" />
</androidx.constraintlayout.widget.ConstraintLayout>